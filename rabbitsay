#!/usr/bin/env bash

function line {
string=" "
for (( i=0; i<$1; i++ ));
do
    string="$string-"
done
echo -e "$string"
}

bunny=(
"        \                ::                                  "
"         \             +/+:                                 "
"          \           /o--s          -///+                  "
"           \          h--.h        :+/-/:o                  "
"                      h.--y.     .o/-//-s.                  "
"                      h---s:    -s-/+--s-                   "
"                      +o--+o   -s/+--:s:                    "
"                      .s+--s//+yo:-/o+.                     "
"                      ://-------:/oo.                       "
"                     +/------------:s-:::///:.              "
"                    /+--------------++------:++.            "
"                    oy--+----+-----:y---------++.          "
"                   ./o--y----yo------y----------:o.         "
"                   /:---/----/-------:------------+         "
"                   //--:--------------------------::        "
"                   +///:----------:/---------------o/.      "
"                  ./---------:/+++:----------------o:/      "
"                  +-------------------------------+++.      "
"                  o------------------------------:o-        "
"                  /:----------------------------:/.         "
"                  .o----------------------------o           "
"                   ./+:----------------::://-://.           "
"                    -+:+o///:/:--+:::::-::::-.              "
"                    ///:     .o-:+                          "
"                              .:/-                          "
)
toptext=$1
buttomtext=$2
if [[ ${#toptext} < 5 ]]
then
toptext="     $toptext     "
fi
line ${#toptext}
echo "|$toptext|"
line ${#toptext}
for (( i=0; i<${#bunny[@]}; i++ ));
do
    echo -e "${bunny[$i]}"
done
echo "$buttomtext"
